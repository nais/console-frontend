{
	"name": "Console Frontend",
	"image": "mcr.microsoft.com/devcontainers/base:debian-12",
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"hverlin.mise-vscode",
				"tamasfe.even-better-toml"
			],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.formatOnSave": true,
				"[svelte]": {
					"editor.defaultFormatter": "svelte.svelte-vscode"
				},
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	"forwardPorts": [4173, 5173, 6006],
	"portsAttributes": {
		"4173": {
			"label": "Vite Preview Server",
			"onAutoForward": "notify"
		},
		"5173": {
			"label": "Vite Dev Server",
			"onAutoForward": "notify"
		},
		"6006": {
			"label": "Storybook",
			"onAutoForward": "notify"
		}
	},
	"onCreateCommand": "bash .devcontainer/hooks/onCreateCommand.sh",
	"postCreateCommand": "bash .devcontainer/hooks/postCreateCommand.sh",
	"postStartCommand": "bash .devcontainer/hooks/postStartCommand.sh",
	// Allows the container to access services running on the host via host.docker.internal
	"runArgs": ["--add-host=host.docker.internal:host-gateway"],
	"features": {
		"ghcr.io/devcontainers-extra/features/mise:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		}
	}
}
