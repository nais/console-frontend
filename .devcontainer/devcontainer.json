{
	"name": "Console Frontend",
	"image": "mcr.microsoft.com/devcontainers/base:debian",
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"hverlin.mise-vscode"
			],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.formatOnSave": true,
				"[svelte]": {
					"editor.defaultFormatter": "svelte.svelte-vscode"
				}
			}
		}
	},
	"forwardPorts": [5173, 6006],
	"portsAttributes": {
		"5173": {
			"label": "Vite Dev Server",
			"onAutoForward": "notify"
		},
		"6006": {
			"label": "Storybook",
			"onAutoForward": "notify"
		}
	},
	"onCreateCommand": "bash -c 'eval \"$(mise activate bash)\" && mise install'",
	"postCreateCommand": "bash -c 'eval \"$(mise activate bash)\" && npm install && npx allow-scripts auto'",
	"postStartCommand": "bash -c 'eval \"$(mise activate bash)\" && npm run prepare'",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": false,
			"installOhMyZsh": false,
			"upgradePackages": false
		},
		"ghcr.io/devcontainers-extra/features/mise:1": {}
	}
}
